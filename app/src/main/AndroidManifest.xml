<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ece.example.mcandgeese">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mcandgeese">
        <activity android:name="ece.example.mcandgeese.GameEndScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            ></activity>
        <activity android:name="ece.example.mcandgeese.VictoryScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            ></activity>
        <activity android:name="ece.example.mcandgeese.NotReadyScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            ></activity>
        <activity android:name="ece.example.mcandgeese.ScrollableMap"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            ></activity>
        <activity android:name="ece.example.mcandgeese.transition_screen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name="ece.example.mcandgeese.MonsterTransitionScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name="ece.example.mcandgeese.FoodScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name="ece.example.mcandgeese.BattleScreen"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name="ece.example.mcandgeese.BuildingScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name="ece.example.mcandgeese.InventoryScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity
            android:name="ece.example.mcandgeese.MapScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity
            android:name="ece.example.mcandgeese.user_lose_screen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity android:name="ece.example.mcandgeese.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScrollableMap"
    android:background="@drawable/campusmap_freeroam">

    <ImageView
        android:id="@+id/FreeRoamStudent"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginStart="605px"
        android:layout_marginTop="400px"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/student_hat" />

    <ImageView
        android:id="@+id/arrowUp"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginTop="212dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goUp"
        app:srcCompat="@drawable/arrowu" />

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/arrowRight"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:onClick="goLeft"
        app:srcCompat="@drawable/arrowu" />

    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginEnd="624dp"
        android:rotation="+90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:onClick="goRight"
        app:srcCompat="@drawable/arrowu" />

    <ImageView
        android:id="@+id/arrowDown"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowUp"
        app:layout_constraintVertical_bias="0.933"
        android:onClick="goDown"
        app:srcCompat="@drawable/arrowu" />

</androidx.constraintlayout.widget.ConstraintLayout>